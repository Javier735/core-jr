@model LoginModel
@{Layout = "_Layout2";}
       
				    <!-- CONTAINER OPEN -->
					<div class="col col-login mx-auto mt-7">
						<div class="text-center">
							<img src="~/assets/images/brand/logo.png" class="header-brand-img" alt="">
						</div>
					</div>
					<div class="container-login100">
						<div class="wrap-login100 p-0">
							<div class="card-body">
								<form class="login100-form" id="login" asp-controller="Account" asp-action="Login" method="post" role="form">
										<div class="text-danger" asp-validation-summary="All" ></div>
									<span class="login100-form-title">
										Login
									</span>
									<div class="wrap-input100" >								
										<input class="input100" asp-for="Email"  name="Email" placeholder="Email"/>
										<span asp-validation-for="Email" class="text-danger"></span>
										<span class="focus-input100"></span>
										<span class="symbol-input100">
											<i class="zmdi zmdi-email" aria-hidden="true"></i>
										</span>
									</div>
									<div class="wrap-input100">				
										<input class="input100" asp-for="Password"  name="Password" placeholder="Password"/>
										<span asp-validation-for="Password" class="text-danger"></span>
										<span class="focus-input100"></span>
										<span class="symbol-input100">
											<i class="zmdi zmdi-lock" aria-hidden="true"></i>
										</span>
									</div>
									<div class="form-group m-0">
										<label asp-for="RememberMe">
											<input asp-for="RememberMe" />
											@Html.DisplayNameFor(m=>m.RememberMe)
										</label>
										
									</div>
								@*	<div class="text-end pt-1">
										<p class="mb-0"><a asp-controller="ErrorPages" asp-action="forgotpassword" class="text-primary ms-1">Olvidaste tu contraseña?</a></p>
									</div>*@
									<div class="container-login100-form-btn">
										<button class="login100-form-btn btn-primary" onclick="Login()">
											<span id="btnLoginText">Login</span>	
											<div class="spinner-border text-white" id="animationLogin"  style="display:none;" role="status">
											<span class="sr-only"></span>
											</div>
										</button>
									</div>
									<div class="text-center pt-3">
										<p class="text-dark mb-0">No tienes cuenta?<a asp-controller="Account" asp-action="Register" class="text-primary ms-1">Crea una</a></p>
									</div>
								</form>
							</div>
							<div class="card-footer">
								<div class="d-flex justify-content-center my-3">
									<a href="" class="social-login  text-center me-4">
										<i class="fa fa-google"></i>
									</a>
									<a href="" class="social-login  text-center me-4">
										<i class="fa fa-facebook"></i>
									</a>
									<a href="" class="social-login  text-center">
										<i class="fa fa-twitter"></i>
									</a>
								</div>
							</div>
						</div>
					</div>
					<!-- CONTAINER CLOSED -->
							
@section scripts {

}

<script>
	function Login() {

		var div = document.getElementById('animationLogin');
		var span = document.getElementById('btnLoginText');
		span.style.display = 'none';
		div.style.display = '';
		$('#login').submit();
		//verificar el estado del formulario	
	}	
</script>