 @model RegisterModel 
@{ Layout = "_Layout2";}      
<!-- CONTAINER OPEN -->
<div class="col col-login mx-auto mt-7">
	<div class="text-center">
		<img src="~/assets/images/brand/logo.png" class="header-brand-img" alt="">
	</div>
</div>
<div class="container-login100">
	<div class="wrap-login100 p-0">
		<div class="card-body">
			<form class="login100-form" id="register" asp-controller="Account" asp-action="Register" method="post" role="form">
				<div class="text-danger" asp-validation-summary="All" ></div>
				<span class="login100-form-title">
					Formulario de registro
				</span>
				<div class="wrap-input100" >			
					<input class="input100" asp-for="Name"  name="Name" placeholder="Nombre"/>					
					<span asp-validation-for="Name" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="mdi mdi-account" aria-hidden="true"></i>
					</span>
				</div>
				<div class="wrap-input100">			
					<input class="input100" asp-for="FirstName"  name="FirstName" placeholder="Apellido paterno"/>
					<span asp-validation-for="FirstName" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						@*<i class="mdi mdi-account" aria-hidden="true"></i>*@
					</span>
				</div>
				<div class="wrap-input100" >		
					<input class="input100" asp-for="LastName"  name="LastName" placeholder="Apellido materno"/>
					<span asp-validation-for="LastName" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
					@*	<i class="mdi mdi-account" aria-hidden="true"></i>*@
					</span>
				</div>
				<div class="wrap-input100">				
					<input class="input100" asp-for="Email"  name="Email" placeholder="Email"/>
					<span asp-validation-for="Email" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="zmdi zmdi-email" aria-hidden="true"></i>
					</span>
				</div>			
				<div class="wrap-input100">	
			@*	<input class="input100" asp-for="Password"  name="Password" placeholder="Contraseña"/>*@
				<input class="input100" name="Password" type="password" placeholder="Contraseña"/>
					<span asp-validation-for="Password" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="zmdi zmdi-lock" aria-hidden="true"></i>
					</span>
				</div>
				<div class="wrap-input100">			
						<input class="input100" asp-for="ConfirmPassword"  name="ConfirmPassword" placeholder="Confirma tu contraseña"/>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="zmdi zmdi-lock" aria-hidden="true"></i>
					</span>
				</div>
		
				<div class="container-login100-form-btn">			
					<button class="login100-form-btn btn-primary" onclick="Register()">
						<span id="btnRegisterText">Registrarse</span>	
							<div class="spinner-border text-white" id="animationRegister"  style="display:none;" role="status">
							<span class="sr-only"></span>
						</div>
					</button>
				</div>
				<div class="text-center pt-3">
					<p class="text-dark mb-0">Ya tienes una cuenta?<a asp-controller="Account" asp-action="Login" class="text-primary ms-1">Ingresa </a></p>
				</div>
			</form>
		</div>
		<div class="card-footer">
			<div class="d-flex justify-content-center my-3">
				<a href="" class="social-login  text-center me-4">
					<i class="fa fa-google"></i>
				</a>
				<a href="" class="social-login  text-center me-4">
					<i class="fa fa-facebook"></i>
				</a>
				<a href="" class="social-login  text-center">
					<i class="fa fa-twitter"></i>
				</a>
			</div>
		</div>
	</div>
</div>
<!-- CONTAINER CLOSED -->

							
@section scripts {



}

<script>
	function Register() {

		var div = document.getElementById('animationRegister');
		var span = document.getElementById('btnRegisterText');
		span.style.display = 'none';
		div.style.display = '';
		$('#register').submit();
		//verificar el estado del formulario	
	}
	
</script>