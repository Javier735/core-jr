<script>
function changeStatusAccount(Id,userName,status){
	    Swal.fire({
		title:status,
		text: 'Deseas ' + status +' la cuenta '+ userName+'?',
		icon: 'warning',
		showCancelButton: true,
		confirmButtonColor: '#3085d6',
		cancelButtonColor: '#d33',
		showCancelButton: true,
		confirmButtonText: 'SI!',
		cancelButtonText: 'No!'
		})
		.then((result) => {
			if (result.isConfirmed){			
				//---
				$.ajax({
				type: 'POST',
				url: '@Url.Content("~/User/ChangeStatusAccount")',
				contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
				data: {Id:Id},
				success: function (data) {
				Swal.fire({
					icon: data.icon,
					title: data.title,
					text: data.msg,
				});
				callUserTable();			
				},
				error: function () {
					alert('Failed to receive the Data');
					console.log('Failed ');
				}
			})
			//---
		}
	});		
}
	
function resetPassword(Id,userName){
    	Swal.fire({
		title: 'Restabler Contraseña \n '+userName+'?',
		text: 'La contraseña por default es: !Asdf123',
		footer: 'El usuario puede cambiar la contraseña al ingresar al sistema',
		icon: 'warning',
		showCancelButton: true,
		confirmButtonColor: '#3085d6',
		cancelButtonColor: '#d33',
		showCancelButton: true,
		confirmButtonText: 'SI!',
		cancelButtonText: 'No!'
		})
		.then((result) => {
			if (result.isConfirmed){			
				//---
				$.ajax({
				type: 'POST',
				url: '@Url.Content("~/User/ResetPassword")',
				contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
				data: {Id:Id},
				success: function (data) {
				Swal.fire({
					icon: data.icon,
					title: data.title,
					text: data.msg,
				});
				callUserTable();
			// $('.modal-backdrop').remove();//eliminamos el backdrop del modal
		},
				error: function () {
					alert('Failed to receive the Data');
					console.log('Failed ');
				}
			})
			//---
		}
	});
}

function deleteAccount(Id,userName) {     
	Swal.fire({
		title: 'Eliminar cuenta',
		text: 'Deseas eliminar la cuenta ' + userName+'?',
		icon: 'warning',
		showCancelButton: true,
		confirmButtonColor: '#3085d6',
		cancelButtonColor: '#d33',
		showCancelButton: true,
		confirmButtonText: 'SI!',
		cancelButtonText: 'No!'
		})
		.then((result) => {
			if (result.isConfirmed){			
				//---
				$.ajax({
				type: 'POST',
				url: '@Url.Content("~/User/DeleteAccount")',
				contentType: 'application/x-www-form-urlencoded; charset=UTF-8', // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
				data: {Id:Id},
				success: function (data) {
				Swal.fire({
					icon: data.icon,
					title: data.title,
					text: data.msg,
				});
				callUserTable();
			// $('.modal-backdrop').remove();//eliminamos el backdrop del modal
		},
				error: function () {
					alert('Failed to receive the Data');
					console.log('Failed ');
				}
			})
			//---
		}
	});
}
</script>	

