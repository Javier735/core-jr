<!DOCTYPE html>
<html lang="en">
<head>

    <!-- META DATA -->
    <meta charset="UTF-8">
    <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Soft-Jr">
    <meta name="author" content="Spruko Technologies Private Limited">
    <meta name="keywords" content="core-jr">

    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/images/brand/favicon.ico" />

    <!-- TITLE -->
    <title>core-jr</title>

    <!-- BOOTSTRAP CSS -->
    <link id="style" href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />

    <!-- STYLE CSS -->
    <link href="~/assets/css/style.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/css/plugins.css" rel="stylesheet" asp-append-version="true" />

    @* @RenderSection("Css",false/*required*/) *@
    @await RenderSectionAsync("Css", required: false)

    <!--- FONT-ICONS CSS -->
    <link href="~/assets/css/icons.css" rel="stylesheet" asp-append-version="true" />


</head>
<body class="app sidebar-mini ltr light-mode">

    <!-- GLOBAL-LOADER -->
    <div id="global-loader">
        <img src="~/assets/images/loader.svg" class="loader-img" alt="Loader">
    </div>
    <!-- /GLOBAL-LOADER -->

    	<!-- PAGE -->
		<div class="page">
			<div class="page-main">

                <!-- app header code -->
                <partial name="~/Views/Shared/layouts/_app-header.cshtml" />
                <!-- End app header Code -->

				<!-- app sidebar Code -->
                <partial name="~/Views/Shared/layouts/_app-sidebar.cshtml" />
                <!-- End app sidebar Code -->

                <!--app-content open-->
				<div class="main-content app-content mt-0">
					<div class="side-app">

                        <!-- CONTAINER -->
						<div class="main-container container-fluid" id="container-core">

                            @RenderBody()
                            
                        </div>
					</div>
					    <!-- CONTAINER CLOSED -->
				</div>
			</div>

            <partial name="~/Views/Shared/layouts/_sidebar-right.cshtml" />

            <partial name="~/Views/Shared/layouts/_footer.cshtml" />

        </div>
        
        <!-- BACK-TO-TOP -->
        <a href="#top" id="back-to-top"><i class="fa fa-angle-up"></i></a>

        <!-- JQUERY JS -->
        <script src="~/assets/js/jquery.min.js"></script>

         <script src="~/GeneralScripts/generalScripts.js"></script>

        <!-- BOOTSTRAP JS -->
        <script src="~/assets/plugins/bootstrap/js/popper.min.js"></script>
        <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>

        <!-- SIDE-MENU JS -->
        <script src="~/assets/plugins/sidemenu/sidemenu.js"></script>

        <!-- Sticky js -->
        <script src="~/assets/js/sticky.js"></script>

        <!-- SIDEBAR JS -->
        <script src="~/assets/plugins/sidebar/sidebar.js"></script>

        <!-- Perfect SCROLLBAR JS-->
        <script src="~/assets/plugins/p-scroll/perfect-scrollbar.js"></script>
        <script src="~/assets/plugins/p-scroll/pscroll.js"></script>
        <script src="~/assets/plugins/p-scroll/pscroll-1.js"></script>

        @* @RenderSection("Scripts",false/*required*/) *@
        @await RenderSectionAsync("Scripts", required: false)
            		

        <!-- Color Theme js -->
        <script src="~/assets/js/themeColors.js"></script>

        <!-- swither styles js -->
        <script src="~/assets/js/swither-styles.js"></script>

        <!-- CUSTOM JS -->
        <script src="~/assets/js/custom.js"></script>  

          <script src="~/assets/sweetalert2/sweetalert2.all.min.js"></script>    

</body>
</html>
